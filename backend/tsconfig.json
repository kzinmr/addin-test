{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
  